{
  "name": "angular-rs",
  "version": "0.1.0",
  "scripts": {
    "watch": "concurrently -k \"ng build --configuration development --watch\" \"wait-on dist/angular-rs/browser/index.html && watchexec -r -e rs,toml cargo run\"",
    "build": "ng build",
    "serve": "cargo run --release",
    "format": "cargo fmt && prettier . -w",
    "test": "cargo fmt --check && cargo clippy && cargo test && prettier . -c && ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox --code-coverage"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@capacitor/angular": "^2.0.3",
    "@capacitor/core": "latest",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/localize": "^20.3.0",
    "@capacitor/cli": "latest",
    "@dotenvx/dotenvx": "^1.51.1",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.7.3",
    "puppeteer": "^24.31.0",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.3"
  }
}
